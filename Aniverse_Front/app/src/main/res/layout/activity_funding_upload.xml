<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adopt_request"
    android:background="@drawable/jelly_bg">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:background="#00ff0000"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="630dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/wround_square"
        android:elevation="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="128dp"
            android:layout_marginTop="15dp"
            android:text="정보 입력"
            android:textColor="#fA8E99"
            android:textSize="25sp"
            android:textStyle="bold" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fund_title"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="펀딩명" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fund_obj"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="펀딩 내용" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fund_price"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="펀딩 금액"
                        android:inputType="numberSigned" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp"
                    android:layout_weight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fund_term"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="펀딩 기간"
                        android:inputType="time" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp"
                    android:layout_weight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/center_name"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="주관 센터명"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp"
                    android:layout_weight="1" />


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="사진(선택)"
                    android:textColor="#6F6F6F"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/image"
                    android:layout_width="225dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_upload" />

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="640dp"
        android:background="#00ffffff"
        android:elevation="10dp">

        <Button
            android:id="@+id/upload_btn"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/jellyshop_button"
            android:gravity="center"
            android:text="업로드하기"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"></Button>
    </FrameLayout>

</RelativeLayout>