<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adopt_request">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/background">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:background="#00ff0000"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="500dp"
        android:background="#ffffff"></FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="580dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/wround_square"
        android:elevation="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="128dp"
            android:layout_marginTop="15dp"
            android:text="정보 입력"
            android:textColor="#7ED687"
            android:textSize="25sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username"
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:hint="성명"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="150dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone"
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:hint="전화번호"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/password"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="200dp"
            android:text="*센터에서 연락 가능한 번호를 남겨주세요!"
            android:textColor="#CCCCCC"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="250dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/message"
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:hint="문의사항/남기는 말"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="600dp"
        android:background="#00ffffff"
        android:elevation="10dp">
        <Button
            android:id="@+id/request_btn"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient_round_squre"
            android:text="신청하기"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"></Button>

    </FrameLayout>


</RelativeLayout>