            android:id="@+id/check_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="105dp"
            android:text="중복확인" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="300dp"
