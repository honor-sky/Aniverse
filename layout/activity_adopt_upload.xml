<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adopt_upload">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:background="#00ff0000"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="630dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/wround_square"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp"
            android:text="입양 정보 입력"
            android:textColor="#7ED687"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="330dp"
            android:layout_height="500dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="65dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="동물 정보"
                    android:textColor="#7ED687"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <TextView
                    android:id="@+id/ess1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="*필수"
                    android:textColor="#f05650"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="사진"
                    android:textColor="#6F6F6F"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/animal_img"
                    android:layout_width="225dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_upload" />

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="159dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="성별"
                            android:textColor="#6C6C6C"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/sex_radioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="남" />

                        <RadioButton
                            android:id="@+id/sex_radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="여" />
                    </LinearLayout>
                </RadioGroup>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="159dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="중성화 여부"
                            android:textColor="#6C6C6C"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/neut_radioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="유" />

                        <RadioButton
                            android:id="@+id/neut_radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="무" />
                    </LinearLayout>
                </RadioGroup>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.AppCompat.DayNight.NoActionBar"
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/species"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:hint="종" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.AppCompat.DayNight.NoActionBar"
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/age"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="나이(추정)" />

                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.AppCompat.DayNight.NoActionBar"
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inoculation"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="접종여부(없으면 '무')"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.AppCompat.DayNight.NoActionBar"
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/disease"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="병력 여부(없으면 '무')"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.AppCompat.DayNight.NoActionBar"
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/deadline"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="입양 마감일"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.AppCompat.DayNight.NoActionBar"
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/finding_spot"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="발견장소"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.AppCompat.DayNight.NoActionBar"
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/personality"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="특성 및 성격"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="보호소 정보"
                    android:textColor="#7ED687"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.AppCompat.DayNight.NoActionBar"
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/center_name"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="보호소명" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp"
                    android:layout_weight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.AppCompat.DayNight.NoActionBar"
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/center_address"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="보호소 주소지" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp"
                    android:layout_weight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.AppCompat.DayNight.NoActionBar"
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/center_customer_number"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="문의 번호"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp"
                    android:layout_weight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.AppCompat.DayNight.NoActionBar"
                    android:layout_width="310dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/condition"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:hint="기타 사항/입양자 필수 조건"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />

                <TextView
                    android:id="@+id/ess_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="*모든 입력란은 필수적으로 채워주셔야 합니다."
                    android:textColor="#f05650"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="310dp"
                    android:layout_height="19dp" />
            </LinearLayout>

        </ScrollView>
    </FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="640dp"
        android:background="#00ffffff"
        android:elevation="10dp">

        <Button
            android:id="@+id/upload_button"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/gradient_round_squre"
            android:text="업로드 하기"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"></Button>

    </FrameLayout>


</RelativeLayout>