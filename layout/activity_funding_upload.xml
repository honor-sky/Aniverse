<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adopt_request">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/background">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="500dp"
        android:background="#ffffff">

    </FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="580dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/wround_square"
        android:elevation="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="128dp"
            android:layout_marginTop="15dp"
            android:text="정보 입력"
            android:textColor="#7ED687"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/animal_btn"
            android:layout_width="156dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/button_design"
            android:text="개별"
            android:textColor="@drawable/text_select"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/center_btn"
            android:layout_width="153dp"
            android:layout_height="40dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/button_design"
            android:text="센터"
            android:textColor="@drawable/text_select"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

        <FrameLayout
            android:id="@+id/funding_info_container"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            android:layout_weight="1" />




    </FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="600dp"
        android:background="#00ffffff"
        android:elevation="10dp">

        <Button
            android:id="@+id/upload_btn"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient_round_squre"
            android:gravity="center"
            android:text="업로드하기"
            android:textSize="23sp"
            android:textStyle="bold"></Button>

    </FrameLayout>


</RelativeLayout>