<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adopt_request">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/jelly_bg">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="500dp"
        android:background="#ffffff"></FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="580dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/wround_square"
        android:elevation="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="15dp"
            android:text="젤리샵"
            android:textColor="#FA8E99"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="젤리가 부족해요"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rect_line"
                        android:gravity="center"
                        android:text="보유한 젤리"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_line"
                        android:gravity="center"
                        android:text="부족한 젤리"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rect_line"
                        android:gravity="center"
                        android:text="       개"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_line"
                        android:gravity="center"
                        android:text="       개"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="220dp"
                        android:layout_height="50dp"
                        android:background="@drawable/button_design"
                        android:gravity="center"
                        android:text="젤리 10개"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/jelly_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/jellyshop_button"
                        android:text="1000원"
                        android:textColor="#292929"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="220dp"
                        android:layout_height="50dp"
                        android:background="@drawable/button_design"
                        android:gravity="center"
                        android:text="젤리 30개"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/jelly_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/jellyshop_button"
                        android:text="3000원"
                        android:textColor="#292929"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="220dp"
                        android:layout_height="50dp"
                        android:background="@drawable/button_design"
                        android:gravity="center"
                        android:text="젤리 50개"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/jelly_50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/jellyshop_button"
                        android:text="5000원"
                        android:textColor="#292929"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="220dp"
                        android:layout_height="50dp"
                        android:background="@drawable/button_design"
                        android:gravity="center"
                        android:text="젤리 100개"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/jelly_100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/jellyshop_button"
                        android:text="10000원"
                        android:textColor="#292929"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="220dp"
                        android:layout_height="50dp"
                        android:background="@drawable/button_design"
                        android:gravity="center"
                        android:text="젤리 300개"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/jelly_300"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/jellyshop_button"
                        android:text="30000원"
                        android:textColor="#292929"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="640dp"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/adopt_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:background="#00ffffff"
            app:srcCompat="@drawable/ic_adopt_icon" />

        <ImageButton
            android:id="@+id/funding_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:background="#00ffffff"
            app:srcCompat="@drawable/ic_funding_icon" />

        <ImageButton
            android:id="@+id/home_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="180dp"
            android:background="#00ffffff"
            app:srcCompat="@drawable/ic_baseline_pets_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/market_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="4dp"
            android:background="#00ffffff"
            app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

        <ImageButton
            android:id="@+id/mypage_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="330dp"
            android:layout_marginTop="4dp"
            android:background="#00ffffff"
            app:srcCompat="@drawable/ic_baseline_person_24" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>