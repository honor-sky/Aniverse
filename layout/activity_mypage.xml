<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Mypage">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/background">

        <!--  <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="10dp"
            android:text="MY"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />-->

        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:background="#00ff0000"
            android:text="로그인 하기>"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="255dp"
            android:background="#00ff0000"
            android:text="회원가입 하기>"
            android:textColor="#B2ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buy_sell_itme"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="170dp"
            android:background="@color/white"
            android:text="구매/판매 상품"
            android:textColor="#7ED687"
            android:textSize="23sp" />

        <Button
            android:id="@+id/love_item"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="170dp"
            android:background="@color/white"
            android:text="찜한상품"
            android:textColor="#7ED687"
            android:textSize="23sp" />

        <Button
            android:id="@+id/my_adopt"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="170dp"
            android:background="@color/white"
            android:text="입양\n임시보호"
            android:textColor="#7ED687"
            android:textSize="23sp" />

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="310dp"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="나의 펀딩"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/background">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:background="@android:color/white">

            <ImageButton
                android:id="@+id/adopt_btn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:background="#00ffffff"
                app:srcCompat="@drawable/ic_adopt_icon" />

            <ImageButton
                android:id="@+id/funding_btn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="100dp"
                android:background="#00ffffff"
                app:srcCompat="@drawable/ic_funding_icon" />

            <ImageButton
                android:id="@+id/home_btn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="180dp"
                android:background="#00ffffff"
                app:srcCompat="@drawable/ic_baseline_pets_24"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/market_btn"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginStart="260dp"
                android:layout_marginTop="4dp"
                android:background="#00ffffff"
                app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

            <ImageButton
                android:id="@+id/mypage_btn"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginStart="330dp"
                android:layout_marginTop="4dp"
                android:background="#00ffffff"
                app:srcCompat="@drawable/ic_baseline_person_24" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </FrameLayout>



</RelativeLayout>